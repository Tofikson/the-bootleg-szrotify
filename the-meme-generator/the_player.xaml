<Window x:Class="the_meme_generator.the_player"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:the_meme_generator"
        mc:Ignorable="d"
        Title="Szrofity" Height="768" Width="1024">
    <Grid Cursor="Hand">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF004407" Offset="1"/>
                <GradientStop Color="#FF029012" Offset="0.503"/>
                <GradientStop Color="#FF02590B" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Image HorizontalAlignment="Left" Height="150" Margin="10,10,0,0" VerticalAlignment="Top" Width="150" Source="/szrot.png"/>
        <DataGrid d:ItemsSource="{d:SampleData ItemCount=5}" Margin="296,45,39,501"/>
        <Button Name="Playpause" HorizontalAlignment="Center" Margin="0,615,0,0" VerticalAlignment="Top" Height="100" Width="100" Click="Button_Click" ClickMode="Press">
            <Button.Background>
                <ImageBrush ImageSource="/img_217916.png"/>
            </Button.Background>
        </Button>
        <Button HorizontalAlignment="Left" Margin="567,640,0,0" VerticalAlignment="Top" Height="50" Width="50" Click="Button_Click_1" ClickMode="Press">
            <Button.Background>
                <ImageBrush ImageSource="/Next-Track.png"/>
            </Button.Background>
        </Button>
        <Button HorizontalAlignment="Left" Margin="407,640,0,0" VerticalAlignment="Top" Height="50" Width="50" ClickMode="Press" RenderTransformOrigin="0.5,0.5" Click="Button_Click_2">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-180"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
            <Button.Background>
                <ImageBrush ImageSource="/Next-Track.png" TileMode="None"/>
            </Button.Background>
        </Button>

    </Grid>
</Window>
